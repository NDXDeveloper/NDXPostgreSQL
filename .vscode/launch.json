{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests NDXPostgreSQL",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tests",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/NDXPostgreSQL.Tests/NDXPostgreSQL.Tests.csproj",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Debug Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tests",
            "program": "${workspaceFolder}/tests/NDXPostgreSQL.Tests/bin/Debug/net10.0/NDXPostgreSQL.Tests.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tests/NDXPostgreSQL.Tests",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Tests Unitaires",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tests",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/NDXPostgreSQL.Tests/NDXPostgreSQL.Tests.csproj",
                "--no-build",
                "--filter",
                "FullyQualifiedName~Unit"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Tests Integration",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tests",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/NDXPostgreSQL.Tests/NDXPostgreSQL.Tests.csproj",
                "--no-build",
                "--filter",
                "FullyQualifiedName~Integration"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}
